{
  "version": 2,
  "buildCommand": "echo 'Using pre-built files'",
  "outputDirectory": "client/build",
  "installCommand": "echo 'No install needed'",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "CI": "false"
  },
  "build": {
    "env": {
      "CI": "false"
    }
  },
  "regions": ["icn1"],
  "functions": {
    "api/**/*.js": {
      "maxDuration": 10
    }
  }
}
